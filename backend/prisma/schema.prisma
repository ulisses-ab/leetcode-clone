generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(cuid())
  handle       String    @unique
  email        String    @unique
  role         String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  submissions  Submission[]
  problems     Problem[] @relation("CreatedProblems")

  oAuthIdentities OAuthIdentity[] 
}

model OAuthIdentity {
  id              String        @id @default(cuid())
  userId          String

  provider        String
  providerUserId  String

  createdAt       DateTime      @default(now())

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@index([userId])
}

model Problem {
  id        String         @id @default(cuid())
  title     String
  statement String
  difficulty String
  creator   User           @relation("CreatedProblems", fields: [creatorId], references: [id])
  creatorId String
  setups    ProblemSetup[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  submissions Submission[]
}

model ProblemSetup {
  id           String   @id @default(cuid())
  problem      Problem  @relation(fields: [problemId], references: [id])
  problemId    String
  language     String
  info         String
  runnerId     String 
  testsFileKey  String? 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  submissions  Submission[]
}

model Submission {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  problem       Problem  @relation(fields: [problemId], references: [id])
  problemId     String
  setup         ProblemSetup @relation(fields: [setupId], references: [id])
  setupId       String
  codeFileKey   String
  resultsFileKey String?
  status        String
  temporary     Boolean
  submittedAt   DateTime
  finishedAt    DateTime?
}

model Runner {
  id            String  @id @default(cuid())
  name          String
  description   String
  runnerFileKey String
  createdAt     DateTime
}